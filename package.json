{
  "name": "atmosfera",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "lint:fix": "turbo run lint:fix",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@atmosfera/eslint-config": "workspace:*",
    "@atmosfera/prettier-config": "workspace:*",
    "@atmosfera/ts-config": "workspace:*",
    "tsup": "6.1.3",
    "turbo": "latest",
    "typescript": "^4.5.3",
    "husky": "^8.0.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@6.32.9"
}
